{
  "version": "12.0.0",
  "granularPathspec": false,
  "packages": [
    "packages/*",
    "packages/output-targets/*"
  ],
  "command": {
    "version": {
      "message": "chore(release): %s",
      "allowBranch": [
        "next",
        "v12"
      ],
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "createRelease": "github",
      "exact": true,
      "forcePublish": true
    },
    "publish": {
      "tempTag": true
    }
  },
  "ignoreChanges": [
    ".build/**",
    ".github/**",
    ".husky/**",
    "resources/**",
    "**/.build/**",
    "**/generated/**",
    "**/stories/**",
    "**/test/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/*.md",
    "**/*.mdx",
    "**/*.stories.ts",
    "**/*.html"
  ]
}
