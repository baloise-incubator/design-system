{
  "name": "root",
  "private": true,
  "homepage": "https://design.baloise.dev",
  "contributors": [
    "Gery Hirschfeld <gerhard.hirschfeld@baloise.ch> (https://github.com/hirsch88)",
    "Yannick Holzenkamp <yannick.holzenkamp@baloise.ch> (https://github.com/yannickholzenkamp)",
    "Petar Nobilo <petar.nobilo@baloise.ch> (https://github.com/nobilo)",
    "Laurent Tauber <laurent.tauber@baloise.ch> (https://github.com/Gagne87)",
    "Mladen Planinicic <mladen.planinicic@baloise.ch> (https://github.com/mladenplaninicic)"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "==================== INSTALLATION / SETUP ====================": "================================",
    "prepare": "husky install",
    "postinstall": "npm run bootstrap && node .build/copy.js",
    "bootstrap": "lerna bootstrap",
    "update:lock": "lerna exec -- npm install --package-lock-only",
    "update:registry": "lerna run update:registry && sed -i -e \"s#nexus.balgroupit.com/repository/npm#registry.npmjs.org#g\" package-lock.json\n",
    "precommit": "lint-staged --allow-empty",
    "==================== FORMATTER / LINTER ====================": "================================",
    "format:check": "prettier --check ./packages",
    "format": "prettier --write ./packages",
    "lint:check": "eslint --ext .tsx,.ts packages/",
    "lint": "eslint --ext .tsx,.ts packages/ --fix",
    "spell": "cspell \"packages/components/src/**/*.{md,mdx,tsx}\" --no-progress",
    "==================== START ====================": "================================",
    "start": "npm run components:start",
    "dev": "npm run components:start",
    "serve": "npm run components:serve",
    "generate": "node .build/banner.js components:generate && npm --prefix packages/components run generate",
    "components:start": "node .build/banner.js components:start && npm --prefix packages/components run start",
    "components:serve": "node .build/banner.js components:serve && npm --prefix packages/components run serve",
    "==================== BUILD ====================": "================================",
    "build": "npm run build:clean && npm run build:pre && npm run build:css && npm run build:components && npm run build:post",
    "build:clean": "rimraf ./packages/components-vue/src/proxies",
    "build:pre": "node .build/banner.js build:pre && concurrently \"npm:build:pre:*\"",
    "build:pre:fonts_": "npm --prefix packages/fonts run build",
    "build:pre:icons_": "npm --prefix packages/icons run build",
    "build:pre:tokens": "npm --prefix packages/tokens run build",
    "build:css": "node .build/banner.js build:css && npm --prefix packages/css run build",
    "build:components": "node .build/banner.js build:components && npm --prefix packages/components run build",
    "build:post": "node .build/banner.js build:post && concurrently \"npm:build:post:*\"",
    "build:post:table__": "npm --prefix packages/components-table run build",
    "build:post:testing": "npm --prefix packages/testing run build",
    "build:post:react__": "npm --prefix packages/components-react run build",
    "build:post:angular": "npm --prefix packages/components-angular run build",
    "build:post:vue____": "npm --prefix packages/components-vue run build",
    "build:docs": "npm run build:pre && npm run build:css && npm run build:components && npm run build:post:table__ && npm --prefix packages/components run build:docs",
    "build:components:docs": "node .build/banner.js build:components && npm --prefix packages/components run build",
    "==================== TEST ====================": "================================",
    "test": "npm run test:components",
    "test:e2e": "node .build/banner.js cypress && concurrently --names \"üß™_TEST__,üñ•Ô∏è__SERVER\" -c \"green,magenta\" \"npm:test:e2e:cy\" \"npm:test:e2e:app\"",
    "test:e2e:app": "npm --prefix packages/components run serve",
    "test:e2e:cy": "npm --prefix packages/components run cy:open",
    "test:components": "node .build/banner.js test:components && cd packages/components && npm run test",
    "test:cypress": "node .build/banner.js test:cypress && npm --prefix packages/components run cy:run",
    "test:build-server": "npm --prefix packages/components run www",
    "test:start-server": "http-server packages/components/www -p 3333 -c-1 --silent",
    "test:cy:install": "npm --prefix packages/components run cy:install",
    "test:ci": "npm run test:build-server && concurrently --names \"SERVER,CYPRESS\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm:test:start-server\" \"npm:test:cypress\"",
    "test:visual:base": "npm --prefix packages/components run cy:visual:base",
    "test:visual:actual": "npm --prefix packages/components run cy:visual:actual",
    "==================== RELEASE ====================": "================================",
    "release:canary": "lerna publish prepatch --canary --preid beta --dist-tag beta --yes --no-changelog",
    "==================== DOCUMENTATION ====================": "================================",
    "storybook": "node .build/banner.js storybook:build && npm run build:docs",
    "storybook:start": "node .build/banner.js storybook:start && http-server storybook -p 8080"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "axe-core": "^4.4.1",
    "chalk": "^4.1.2",
    "concurrently": "^7.0.0",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "cspell": "^5.18.4",
    "cypress-axe": "^0.14.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "figlet": "^1.5.2",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "http-server": "^14.0.0",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.2.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "4.3.5"
  }
}
