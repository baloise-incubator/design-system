  "scripts": {
    "==================== INSTALLATION / SETUP ====================": "================================",
    "prepare": "husky install",
    "postinstall": "npm run bootstrap && node .build/copy.js",
    "bootstrap": "lerna bootstrap",
    "update:lock": "lerna exec -- npm install --package-lock-only",
    "update:registry": "lerna run update:registry && sed -i -e \"s#nexus.balgroupit.com/repository/npm#registry.npmjs.org#g\" package-lock.json\n",
    "precommit": "lint-staged --allow-empty",
    "==================== FORMATTER / LINTER ====================": "================================",
    "format:check": "prettier --check ./packages",
    "format": "prettier --write ./packages",
    "lint:check": "eslint --ext .tsx,.ts packages/",
    "lint": "eslint --ext .tsx,.ts packages/ --fix",
    "spell": "cspell \"packages/components/src/**/*.{md,mdx,tsx}\" --no-progress",
    "==================== START ====================": "================================",
    "start": "npm run dev",
    "dev": "node .build/utils/banner.js components:start && npm --prefix packages/components run start",
    "serve": "node .build/utils/banner.js components:serve && npm --prefix packages/components run serve",
    "www": "npm run build && npm --prefix packages/components run www",
    "generate": "node .build/utils/banner.js components:generate && npm --prefix packages/components run generate",
    "==================== BUILD ====================": "================================",
    "build": "npm run build:pre && npm run build:css && npm run build:components && npm run build:post",
    "build:pre": "node .build/utils/banner.js build:pre && concurrently \"npm:build:pre:*\"",
    "build:pre-core": "node .build/utils/banner.js build:pre && concurrently \"npm:build:pre:core:*\"",
    "build:pre:core:fonts_": "npm --prefix packages/fonts run build",
    "build:pre:core:icons_": "npm --prefix packages/icons run build",
    "build:pre:core:tokens": "npm --prefix packages/tokens run build",
    "build:pre:out:ng_____": "npm --prefix packages/output-targets/angular run build",
    "build:pre:out:vue____": "npm --prefix packages/output-targets/vue run build",
    "build:pre:out:react__": "npm --prefix packages/output-targets/react run build",
    "build:css": "node .build/utils/banner.js build:css && npm --prefix packages/css run build",
    "build:components": "node .build/utils/banner.js build:components && npm --prefix packages/components run build",
    "build:components:pre": "node .build/utils/banner.js build:components && npm --prefix packages/components run build:pre",
    "build:post": "node .build/utils/banner.js build:post && concurrently \"npm:build:post:*\"",
    "build:post:table__": "npm --prefix packages/components-table run build",
    "build:post:testing": "npm --prefix packages/testing run build",
    "build:post:react__": "npm --prefix packages/components-react run build",
    "build:post:angular": "npm --prefix packages/components-angular run build",
    "build:post:vue____": "npm --prefix packages/components-vue run build",
    "build:docs": "npm run build:pre-core && npm run build:pre:out:vue____ && npm run build:css && npm run build:components:pre && npm run build:post:table__ && npm --prefix packages/components run build:docs",
    "build:e2e": "npm run build:pre && npm run build:css && npm run build:components && npm run build:post:testing",
    "==================== TEST ====================": "================================",
    "test": "node .build/utils/banner.js test && npm --prefix packages/components test",
    "test:e2e": "node .build/utils/banner.js cypress && concurrently --names \"üß™_TEST__,üñ•Ô∏è__SERVER\" -c \"green,magenta\" \"npm:test:e2e:cy\" \"npm:test:e2e:app\"",
    "test:e2e:app": "npm --prefix packages/components run serve",
    "test:e2e:cy": "npm --prefix packages/components run cy:open",
    "test:cypress": "node .build/utils/banner.js test:cypress && npm --prefix packages/components run cy:run",
    "test:build-server": "npm --prefix packages/components run www",
    "test:start-server": "http-server packages/components/www -p 3333 -c-1 --silent",
    "test:cy:install": "npm --prefix packages/components run cy:install",
    "test:ci": "npm run test:build-server && concurrently --names \"SERVER,CYPRESS\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm:test:start-server\" \"npm:test:cypress\"",
    "test:visual:base": "npm --prefix packages/components run cy:visual:base",
    "test:visual:actual": "npm --prefix packages/components run cy:visual:actual",
    "==================== RELEASE ====================": "================================",
    "release:canary": "lerna publish prepatch --canary --preid beta --dist-tag beta --yes --no-changelog",
    "release:alpha": "lerna publish prepatch --canary --preid alpha --dist-tag beta --yes --no-changelog",
    "release:version": "npm --prefix packages/components run build:version",
    "==================== DOCUMENTATION ====================": "================================",
    "storybook": "node .build/utils/banner.js storybook && npm run build:docs",
    "storybook:start": "node .build/utils/banner.js storybook:start && http-server storybook -p 8080"
  },
